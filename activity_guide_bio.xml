<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guide_bio"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.grumwoldemichael.honestour.GuideBio">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
<TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        tools:text="Nick Zeppos"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
    android:textColor="@color/colorAccent" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/zeppos"
            android:id="@+id/imageView2"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" />

            <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            tools:text="Vanderbilt University"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorAccent" />

        <Button
        android:text="Button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/button"
        tools:text="Bookmark"
            android:layout_below="@+id/textView2"
            android:layout_toStartOf="@+id/textView6"
            android:layout_marginTop="22dp"
            android:background="#ffffff"
            android:textColor="@color/colorPrimaryDark"/>

        <Button
            android:text="Button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button2"
            tools:text="Message"
            android:layout_alignBaseline="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_toEndOf="@+id/textView6"
            android:background="#ffffff"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            tools:text="Tour through Vanderbilt's campus from Commons to Main
      Journey through Centennial Park
      Grab a bite to eat at Pancake Pantry "
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        tools:text="Bio"
        android:textSize="30sp"
            android:layout_below="@+id/ratingBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:textColor="@color/colorAccent" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            tools:text="Specifications"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/textView3"
            android:layout_alignEnd="@+id/imageView2"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hey! I'm Nick and I love all things Vanderbilt and Nashville. I currently work there part time and would love to show you all the amazing things the city and university have to offer. Hopefully I'll see you soon and Anchor Down!"
            android:id="@+id/textView3"
            android:textAlignment="viewStart"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"
            android:textSize="18sp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:numStars="5"
                tools:foregroundTint="@color/colorAccent"
                android:elevation="1dp"
                android:progressTint="@color/colorAccent"
                android:progressTintMode="src_atop"
                android:secondaryProgressTint="@color/colorAccent"
                android:secondaryProgressTintMode="src_atop"
                android:progressBackgroundTint="@color/colorAccent"
                android:layout_below="@+id/button2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp" />

    </RelativeLayout>
</ScrollView>