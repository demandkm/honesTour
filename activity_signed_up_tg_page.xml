<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have successfully created a honesTourGuide account! We have sent you a confirmation e-mail, but go ahead and find a honesTourist to lead you on your first honesTour!"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:textSize="22sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01" />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:text="honesTourist account page"
        android:textAppearance="@android:style/TextAppearance.Holo.Light.Widget.Button" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06" />

</LinearLayout>
